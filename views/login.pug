extends layout

block content
  .container
    .row 
      .col-sm
      .col
        .card.shadow-lg
          h1.text-black Login
          hr
          p
          form(id="login" method='POST', action='/login')
            #form-group
              label Username:
              input.form-control(name='name', type='text')
              br
            #form-group
              label Password:
              input.form-control(name='password', type='password')
              br


          button.btn.btn-primary(type="submit" form="login" action='submit') Submit
      .col-sm
            
